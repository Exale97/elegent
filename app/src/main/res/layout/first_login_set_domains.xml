<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- 标题文字 -->
    <TextView
        android:id="@+id/choose_domain_view"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="44dp"
        android:text="@string/first_choose_domain"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- OpenGL 气泡选择容器 -->
    <FrameLayout
        android:id="@+id/bubble_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="#80FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_domain_view">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bubble_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:clipToPadding="false"
            android:scrollbars="vertical" />
    </FrameLayout>

    <!-- 确认按钮 -->
    <Button
        android:id="@+id/button_confirm"
        android:layout_width="254dp"
        android:layout_height="56dp"
        android:layout_marginBottom="60dp"
        android:text="@string/first_start_journey"
        android:background="@drawable/button_round_selector"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>