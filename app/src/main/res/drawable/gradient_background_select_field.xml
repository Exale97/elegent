<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 底层背景色 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F4F7FC" />
        </shape>
    </item>

    <!-- 渐变层 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#673AB7"
                android:endColor="#3F51B5"
                android:centerColor="#AAAAAA"
                android:type="linear"/>
        </shape>
    </item>
</layer-list>
